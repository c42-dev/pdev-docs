{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "pague.dev",
  "locale": "pt-BR",
  "api": {
    "playground": {
      "mode": "simple"
    }
  },
  "openapi": [
    "openapi.json"
  ],
  "colors": {
    "primary": "#16A34A",
    "light": "#07C983",
    "dark": "#15803D"
  },
  "favicon": "/favicon.ico",
  "navigation": {
    "groups": [
      {
        "group": "Visão Geral",
        "pages": [
          "index",
          "sdk",
          "api-reference/webhooks"
        ]
      },
      {
        "group": "PIX",
        "pages": [
          "api-reference/pix/create"
        ]
      },
      {
        "group": "Clientes",
        "pages": [
          "api-reference/customers/create",
          "api-reference/customers/list"
        ]
      },
      {
        "group": "Projetos",
        "pages": [
          "api-reference/projects/create",
          "api-reference/projects/list"
        ]
      },
      {
        "group": "Links de Pagamento",
        "pages": [
          "api-reference/charges/create",
          "api-reference/charges/list",
          "api-reference/charges/get"
        ]
      },
      {
        "group": "Transações",
        "pages": [
          "api-reference/transactions/get"
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://pague.dev",
          "icon": "gauge"
        },
        {
          "anchor": "GitHub",
          "href": "https://github.com/pague-dev",
          "icon": "github"
        }
      ],
      "languages": [
        {
          "language": "pt-BR",
          "href": "https://docs.pague.dev",
          "default": true
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.png",
    "dark": "/logo/dark.png"
  },
  "navbar": {
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://pague.dev"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/pague-dev"
    }
  }
}
